package driver;

import java.util.regex.Matcher;
import java.util.regex.Pattern;


public class FirstThreePubs {
  
 public static void extractFirstThreePubs(String googleScholarURL) {
    try {
      MyParser googleScholarParser = new MyParser();
      String rawHTMLString = googleScholarParser.getHTML(googleScholarURL);

      String reForFirstThreePubs =
          "<a id=\"col-title\" "
              + "class=\"a.cit-dark-large-link\">(.*?)</a>";
      
      Pattern patternObject = Pattern.compile(reForFirstThreePubs);
      Matcher matcherObject = patternObject.matcher(rawHTMLString);
      while (matcherObject.find()) {
        System.out.println("Title of the first three Publications: " + 
      matcherObject.group(1));
      }

    } catch (Exception e) {
      System.out.println("malformed URL or cannot open connection to "
          + "given URL");
    }
    
   }
  
}
