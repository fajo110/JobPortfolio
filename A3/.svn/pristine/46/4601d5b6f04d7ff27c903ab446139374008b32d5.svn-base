package driver;
import java.io.BufferedReader;
import java.io.File;
import java.io.InputStreamReader;
import java.net.URL;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

import driver.*;

public class NumAllCitations {
  
  private static void extractNumAllCitations(String googleScholarURL) {
    try {
      MyParser googleScholarParser = new MyParser();
      String rawHTMLString = googleScholarParser.getHTML(googleScholarURL);

      String reForAllCitationExtraction =
          "<td(2) class=\"cit-borderleft cit-data\">(.*?)</td(2)>";
      Pattern patternObject = Pattern.compile(reForAllCitationExtraction);
      Matcher matcherObject = patternObject.matcher(rawHTMLString);
      while (matcherObject.find()) {
        System.out.println("Number of All Citations are " + matcherObject.group(1));
      }

    } catch (Exception e) {
      System.out.println("malformed URL or cannot open connection to "
          + "given URL");
    }
    
   }
  
}
